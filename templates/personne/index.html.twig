{% extends 'template.html.twig' %}
{% block title %}
    Liste des abonnées
{% endblock %}

{% block Pagetitle %}
    Liste des abonnées
{% endblock %}
{% block body %}
    <div class="row">
        {% for personne in personnes %}
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">{{ personne.name }}</h5>
                <h6 class="card-subtitle mb-2 text-muted">{{ personne.firstname}} </h6>
                <p class="card-text">Age : {{ personne.age }}</p>
                <a href="{{ path('personne.detail', {id: personne.id}) }}" class="card-link">Détail</a>
            </div>
        </div>
        {% endfor %}
    </div>

{% endblock %}
